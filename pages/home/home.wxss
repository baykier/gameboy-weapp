/* pages/home/home.wxss */
.container{
  padding: 60rpx;
}
.title{
  width: 41rpx;
  height: 202rpx;
  position: fixed;
  right: 60rpx;
  top: 50%;
  margin-top: -101rpx; 
}
.handle-circle{
  width: 400rpx;
  height: 400rpx;
  background-color: #736b6b;
  overflow: hidden;
  border-radius:500rpx;
  position: relative
}
.inner-circle{
  display: inline-block;
  width: 170rpx;
  height: 170rpx;
  background-color: #fff;
  overflow: hidden;
  border-radius:200rpx;
  position: absolute;
  left: 50%;
  top:50%;
  margin-top:-85rpx;
  margin-left:-85rpx;
}
.icon{
  position: absolute
}
.top-icon{
  width: 80rpx;
  height: 60rpx;
  top: 20rpx;
  left: 50%;
  margin-left: -40rpx;
}
.bottom-icon{
  width: 80rpx;
  height: 60rpx;
  bottom: 20rpx;
  left: 50%;
  margin-left: -40rpx;
}
.left-icon{
  width: 60rpx;
  height: 80rpx;
  left: 20rpx;
  top: 50%;
  margin-top: -40rpx;
}
.right-icon{
  width: 60rpx;
  height: 80rpx;
  right: 20rpx;
  top: 50%;
  margin-top: -40rpx;
}
.middle{
  width: 400rpx;
  height: 220rpx;
  position: fixed;
  top: 50%;
  left:40%;
  margin-top: -120rpx;
  margin-left: -200rpx;
  text-align: center
}
.game-btn{
  width: 100rpx;
  height: 170rpx;
  margin: 40rpx 10rpx;
  line-height: 40rpx;
}
.handle-btns{
  position: fixed;
  bottom:60rpx;
